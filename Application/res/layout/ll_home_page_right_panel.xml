        android:layout_height="@dimen/bottom_space" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_line_2"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_space" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_line_3"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_space" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_line_4"/>

</LinearLayout>